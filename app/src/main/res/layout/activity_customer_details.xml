<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DBS DETAILS"
        android:textColor="@color/button"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:background="@color/recyclerview"
        android:padding="5dp">

        <ImageView
            android:id="@+id/customerImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_launcher_foreground"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_customername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_customerid"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:text="Customer name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txt_customerid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/customerImage"
            android:padding="3dp"
            android:text="Customer id"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_customername"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp" />
    </RelativeLayout>

</RelativeLayout>